{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": "/",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "*" : ["src/*.d.ts"]
    },
    "lib": ["es2020"]
  },
  "exclude": ["src/**/tests/"]
}
